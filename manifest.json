{
  "name": "Yelp for MealPal",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Automatically show Yelp ratings alongside meals on the MealPal lunches page.",
  "homepage_url": "https://github.com/muesugi/yelp-mealpal",
  "icons": {
    "16": "icons/Yelp16.png",
    "48": "icons/Yelp48.png",
    "128": "icons/Yelp128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/Yelp19.png",
    "default_title": "Yelp for MealPal"
  },
  "permissions": [
    "http://api.yelp.com/v3/*",
    "https://api.yelp.com/v3/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://secure.mealpal.com/lunch"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
     {
      "matches": [
        "https://secure.mealpal.com/lunch"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
      "icons/*"
    ]
}