{
  "name": "Yelp for MealPal",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Inject Yelp ratings into MealPal",
  "homepage_url": "https://github.com/muesugi/yelp-mealpal",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "http://api.yelp.com/v3/*",
    "https://api.yelp.com/v3/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://secure.mealpal.com/lunch"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
     {
      "matches": [
        "https://secure.mealpal.com/lunch"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
      "icons/*"
    ]
}